@model Web.Models.AdvertisementSearchDto
<h2>Søg annoncer</h2>
<form>
    <div class="row g-2 mb-3">
        <div class="col-md">
            <div class="form-floating">
                <input class="form-control" asp-for="ProductName" />
                <label asp-for="ProductName">Produkt navn</label>
            </div>
        </div>
    </div>
    <div class="row g-2 mb-3">
        <div class="col-md">
            <div class="form-floating">
                <input class="form-control" asp-for="YearFrom" />
                <label asp-for="YearFrom">Årgang fra</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <input class="form-control" asp-for="YearTo" />
                <label asp-for="YearTo">Årgang til</label>
            </div>
        </div>
    </div>
    <div class="row g-2 mb-3">
        <div class="col-md">
            <div class="form-floating">
                <input class="form-control" asp-for="PriceFrom" />
                <label asp-for="PriceFrom">Pris fra</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating">
                <input class="form-control" asp-for="PriceTo" />
                <label asp-for="PriceTo">Pris til</label>
            </div>
        </div>
    </div>
    <div class="row g-2 mb-3">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" asp-for="IsOffer">
          <label class="form-check-label" asp-for="IsOffer">Byd på pris</label>
        </div>
    </div>
    <div class="form-group">
        <button id="addSearchBtn" class="btn btn-primary">Søg</button>
    </div>
</form>